<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.hostipallocation.HospitalLocationActivity">

    <com.google.android.gms.maps.MapView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40sp"
        android:layout_marginLeft="40sp"
        android:background="@drawable/border_radius_notifikasi_hijau"
        android:layout_marginTop="80dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="16dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="23dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:text="@string/text_name" />
            <TextView
                android:id="@+id/txt_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14dp"
                android:padding="10dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:background="@color/buttonHijauTua"
                android:paddingBottom="10dp"
                android:textColor="#FFFFFF"
                android:text="@string/text_name" />
            <TextView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14dp"
                android:textColor="#000"
                android:text="" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_gravity="bottom"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_navigation"
                android:background="@drawable/border_radius_blue"
                android:padding="15dp"
                android:text="NAVIGASI"
                android:textColor="#FFFFFF"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_go_rs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/border_radius"
                    android:padding="15dp"
                    android:text="BAWA KORBAN"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/btn_arrive_rs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/border_radius"
                    android:padding="15dp"
                    android:text="TIBA DI RUMAH SAKIT"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp" />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_current_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="120dp"
        app:fabSize="normal"
        android:clickable="true"
        android:backgroundTint="@color/buttonBiru"
        app:srcCompat="@android:drawable/ic_menu_mylocation" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/buttonBiru"
        app:titleTextColor="@color/colorPutih"
        app:popupTheme="@style/AppTheme.PopupOverlay" />



</FrameLayout>